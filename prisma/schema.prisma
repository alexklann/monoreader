generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./monoreader.sqlite"
}

model feeds {
  id             Int      @id @default(autoincrement())
  name           String
  url            String
  image          String
  updateInterval Int      @default(5) // in minutes
  updated        DateTime @default(now())
}

model rss_articles {
  id          Int      @id @default(autoincrement())
  feed_url    String
  title       String
  link        String
  pub_date    String
  description String
  content     String
  guid        String
  created_at  DateTime @default(now())
}
